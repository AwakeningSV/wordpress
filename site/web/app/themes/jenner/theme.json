{
    "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 2,
    "styles": {
        "spacing": {
            "padding": {
                "top": "20px",
                "right": "5px",
                "left": "0px",
                "bottom": "0px"
            }
        },
        "elements": {
            "button": {
                "border": {
                    "radius": "0px"
                }
            },
            "link": {
                "typography": {
                    "textDecoration": "none"
                }
            }
        },
        "blocks": {
            "core/buttons": {
                "typography": {
                    "textTransform": "lowercase"
                }
            }
        }
    },
	"settings": {
        "useRootPaddingAwareAlignments": true,
        "appearanceTools": true,
		"layout": {
			"contentSize": "976px",
			"wideSize": "1100px"
		},
        "spacing": {
            "blockGap": true
        },
        "typography": {
            "fontFamilies": [
                {
                   "fontFamily": "Oswald, FreeSans, Arimo, 'Droid Sans', Helvetica, Arial, sans-serif",
                   "slug": "accent",
                   "name": "Accent"
                }
            ]
        },
        "blocks": {
            "core/buttons": {
                "appearanceTools": false
            }
        }
	},
    "templateParts": [
        {
            "name": "header",
            "title": "Site Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Site Footer",
            "area": "footer"
        },
        {
            "name": "teaching-sidebar",
            "title": "Teaching Sidebar",
            "area": "uncategorized"
        }
    ] 
}